@model Etkinlik

<div class="col-6">
	<h2>Etkinlik Ekle</h2>

	@using (Html.BeginForm("Create", "Etkinlik", FormMethod.Post))
	{
		@Html.HiddenFor(model=> model.Id)
		<div class="form-group">
			Başlık
			@Html.TextBoxFor(model => model.Baslik, new { @class = "form-control" })
		</div>

		<div class="form-group mt-2">
			Yer
			@Html.TextBoxFor(model => model.Yer, new { @class = "form-control" })
		</div>

		<div class="form-group mt-2">
			Zaman
			<input class="form-control" asp-for="Zaman" type="date" />
		</div>

		<div class="form-group mt-2">
			Açıklama
			@Html.TextBoxFor(model => model.Aciklama, new { @class = "form-control" })
		</div>

		<div class="form-group mt-2">
			Ücretli
			@Html.RadioButtonFor(model => model.UcretTip, "Ücretli", new { htmlAttributes = new { @class = "form-control" }})

			Ücretsiz
			@Html.RadioButtonFor(model => model.UcretTip, "Ücretsiz", new { htmlAttributes = new { @class = "form-control"}})
		</div>

		<div class="form-group mt-2 formGroupUcret">
			Ücret
			@Html.EditorFor(model => model.Ucret, new { htmlAttributes = new {@class = "form-control"} })
		</div>

		<div class="form-group mt-2">
			<button class="btn btn-secondary" onclick="history.go(-1); return false;" href="#">Geri</button>
			<button type="submit" value="Submit" class="btn btn-primary">Kaydet</button>
		</div>
	}
</div>

<script>
	$(document).ready(function () {
		if ($("#ucretTip").val() == "Ücretli") {
			$('.formGroupUcret').show();
		} else {
			$('.formGroupUcret').hide();
		}

		$(':radio[value=Ücretli]').click(function () {
			$('.formGroupUcret').show();
		});
		$(':radio[value=Ücretsiz]').click(function () {
			$('.formGroupUcret').hide();
		});
	});
</script>
